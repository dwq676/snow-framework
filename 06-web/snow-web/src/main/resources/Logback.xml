    <appender name="elastic" class="com.zoe.snow.log.appender.elastic.ElasticAppender"/>
    <!-- 日志输出级别 -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="elastic"/>
